{
    "parser": "flow",
    "printWidth": 100,
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
        {
            "files": ".prettierrc",
            "options": { "parser": "json" }
        },
        {
            "files": "*.json",
            "options": { "parser": "json" }
        },
        {
            "files": "package.json",
            "options": { "printWidth": 500 }
        },
        {
            "files": "*.css",
            "options": { "parser": "css" },
        }
    ]
}
